/* yc_youliao/weChat/weChat.wxss */
page{
  height: 100%;
}
.weChat{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.contentBox{
  flex: 1;
  padding: 20rpx 10rpx;
  background-color: #ECECEC;
  box-sizing: border-box;
}
.inputBox {
  background-color: #F4F4F4;
  padding: 9px 10px;
  font-size: 33rpx;
}
.inputBox .input{
  width: 78%;
  height: 32px;
  background-color: #fff;
  display: inline-block;
  padding-left: 10px;
  vertical-align: top;
}
.inputBox .btn{
  float: right;
  background-color: #19AE16;
  line-height: 32px;
  width: 18%;
  text-align: center;
  color: #fff;
  height: 34px;
  border-radius: 3px;
}
.contentItem {
  position: relative;
  margin-bottom: 26rpx;
}
.contentItem .imgItem{
  position: absolute;
  right: 0;
  top: 0;
  width: 80rpx;
  height: 80rpx;
  background-color: darkcyan;
  border-radius: 2px;
  overflow: hidden;
}
.contentItem.left .imgItem{
  left: 0;
}
.contentItem.left .textWrapper{
  background-color: #fff;
}
.contentItem .textWrapper{
  width: 70%;
  margin: 0 auto;
  line-height: 60rpx;
  font-size: 30rpx;
  padding: 10rpx;
  background-color: #A2E759;
  border-radius: 4px;
}