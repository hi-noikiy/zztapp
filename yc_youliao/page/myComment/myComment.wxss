/* yc_youliao/myComment/myComment.wxss */
page{
  background-color: #f4f4f4;
}
.myComment .commentItem{
  display: flex;
  background-color: #fff;
  padding: 20rpx;
  border-bottom:1rpx solid #eee
}
.myComment .commentItem:last-child{
  border-bottom: none;
}
.myComment .commentItem .avatar{
  flex: 0 0 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.myComment .commentItem .des{
  flex: 1;
  padding-left: 20rpx;
  color: #222;
}
.commentItem .des .name{
  padding-top: 10rpx;
  font-size: 28rpx;
  line-height: 28rpx;
}
.commentItem .des .time{
  padding-top: 16rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  color: #999;
}
.commentItem .des .content{
  margin-top: 10rpx;
  line-height: 60rpx;
  font-size: 32rpx;
}