page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.bg{
	background: #fff;
}
.color{
	color: #979797;
}
.container-release{
	width: 100%;
	color: #000;
	font-size: 28rpx;
}
.textarea{
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
}
.pic-upload-area{
	margin: 15rpx 0;
	display: flex;
	flex-wrap: wrap;
	width: 100%;
	box-sizing: border-box;
	padding: 25rpx 20rpx;
}
.pic{
	width: 157rpx;
	height: 157rpx;
	line-height: 170rpx;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	position: relative;
}
.del-btn{
	position: absolute;
	left:0;
	bottom: 0;
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	text-align: center;
	font-size: 24rpx;
	background: rgba(0,0,0,0.6);
	color: #fff;
}
.pic .pic-item{
	width: 100%;
	height: 100%;
}
.plus{
	background: #dedede;
	text-align: center;
	color: #fff;
}
.plus .iconfont{
	font-size: 90rpx;
	display:inline-block;
}
.item{
	display: flex;	
	padding-left: 30rpx;
	height: 90rpx;
	line-height: 90rpx;
	margin-bottom:0.5rpx;
	color: #979797;
}
.item .icon-adress{
	font-size:30rpx;
	margin-right:12rpx;
	margin-left:-4rpx;
}
.item .icon-classify, .item .icon-tel-right{
	color: #979797;
}
.container-release .item .active{
	color: #333;
}
.input{
	height: 100%;
}
.iconLeft{
	font-size:24rpx;
	margin-right:15rpx;
	vertical-align:11%;
	margin-top:-2rpx;
}
.text{
	flex: 1;
	font-size: 28rpx;
	color: #333;
	height: 100%;
	overflow: hidden;
}
.icon-right-box{
	width: 70rpx;
	height: 100%;
	text-align: center;
}
.icon-right-box .iconfont{
	font-size: 28rpx;
}
.deal{
	font-size: 23rpx;
	height: 70rpx;
	position:relative;
}
.container-release .on{
	background: #fa5305;
	color: #fff;
}
.btn{
	width: 94%;
	margin: 30rpx auto 30rpx;
	background: #dedede;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 30rpx;
	color: #fff;
	border-radius: 15rpx;
}
.caution{
	padding:20rpx;
	color:#979797;
	font-size:24rpx;
	margin-top:10rpx;
	box-sizing:border-box;
	width:70%;
	display: flex;
	position:absolute;
	left:50%;
	top:0;
	transform:translateX(-50%);
}
radio-group{
	margin-top: -8rpx;
}
.caution i{
	color: #000080;
}