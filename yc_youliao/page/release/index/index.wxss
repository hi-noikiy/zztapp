page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.bg{
	background: #fff;
}
.color{
	color: #979797;
}
.container-release-index{
	width: 100%;
	color: #000;
	font-size: 26rpx;
}
.banner-box{
	width: 100%;
	height: 300rpx;
	position: relative;
	color: #fff;
	font-size: 25rpx;
}
.banner-img{
	width: 100%;
	height: 100%;
}
.title, .num-box{
	position: absolute;
	text-align: center;	
}
.search{
	position: absolute;
	width: 85%;
	left: 50%;
	top: 20rpx;
	transform: translateX(-50%);
	height: 50rpx;
	line-height: 50rpx;
	padding-left: 20rpx;
	border-radius: 15rpx;
	background: rgba(0,0,0,0.4);
}
.search .iconfont{
	color: #fff;
	font-size: 26rpx;
	margin-right: 15rpx;
}
.title{
	width: 100%;
	font-size: 32rpx;
	top: 50%;
	left: 0;
	transform: translateY(-50%);
}
.num-box{
	display: flex;
	bottom: 40rpx;
	width: 90%;
	transform: translateX(-50%);
	left: 50%;
}
.num-item{
	width: 33.333%;
	font-size: 26rpx;
}

.type-box{
	display: flex;
	flex-wrap: wrap;
	padding-bottom: 20rpx;
	width: 100%;
}
.type-item{
	width: 20%;
	margin-bottom: 10rpx;
}
.type-img{
	width: 90rpx;
	height: 90rpx;
	margin: 30rpx auto 15rpx;
	background: #dedede;
	border-radius: 40%;
}
.type-item-img{
	width: 100%;
	height: 100%;
}
.type-text{
	text-align:center;
	width: 100%;
	overflow: hidden;
	color: #333;
	font-size:26rpx;
}
.infoList-box{
	width: 100%;
}
.infoList-title{
	display: flex;
	width: 100%;
	border-bottom: 0.5rpx solid #dedede;
}
.infoList-title-item{
	position: relative;
	text-align: center;
	color: #979797;
	width: 25%;
	height: 90rpx;
	line-height: 90rpx;
	font-size: 30rpx;
}
.infoList-title .active{
	color: #fa5305;
}
.infoList-title .active:after{
	position: absolute;
	content: '';
	display: inline-block;
	left: 50%;
	bottom: 0;
	transform: translateX(-50%);
	width: 80%;
	height: 2rpx;
	background: #fa5305;
}
.newItem{
    background-color: #fff;
}
.newItem .images .img{
	padding-right: 12rpx;
	padding-bottom: 10rpx;
}
.avatar-img{
	width: 100%;
	height: 100%;
}
.none{
	margin-top:30rpx;
	color:#777;
	text-align:center;
}
.titleWrapper{
	width: 75%;
}

.create{
	position: fixed;
	right: 30rpx;
	bottom: 50rpx;
}
.create .iconfont{
	color: #fa5305;
	font-size: 90rpx;
}
