/* yc_youliao/page/myCollect/myCollect.wxss */
image{
  width: 100%;
  height: 100%;
}
page{
  background-color: #f5f5f5;
}
.newItem{
  background-color: #fff;
}
.myCollect{
	padding-top: 105rpx;
}
.tab-box{
	width: 100%;
	display: flex;
	background-color: #fff;
	position: fixed;
	top: 0;
	left:0;
	z-index: 100;
}
.tab-item{
	width: 50%;
	text-align: center;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 30rpx;
	position: relative;
	border-bottom: 1rpx solid #dedede;
}
.active{
	color: #fa5305;
}
.active:after{
	position: absolute;
	content: '';
	display: inline-block;
	width: 65%;
	height: 3rpx;
	background: #fa5305;
	left: 50%;
	bottom: 0;
	transform: translateX(-50%);
}
.home-list .home-list-item{
	padding: 15rpx 20rpx; 
	display: flex;
	border-bottom: 0.5rpx solid #dedede;
	position:relative;
	background: #fff;
}
.home-list .home-list-item .pic{
	width: 140rpx;
	height: 140rpx;
}
.home-list .home-list-item .pic .img{
	width: 100%;
	height: 100%;
}
.home-list .home-list-item .desc{
	flex: 1;
	margin-left: 15rpx;
}
.home-list-item .desc .title{
	display: flex;
	justify-content: space-between;
	font-size:30rpx;
}
.home-list-item .desc .title .name{
	font-weight:600;
}
.home-list-item .desc .tabs{
	display: flex;
}
.home-list-item .desc .tabs .tab-itam{
	font-size:23rpx;
	padding:0 5rpx;
	border:0.5rpx solid #FA8072;
	border-radius:10rpx;
	height:36rpx;
	line-height:36rpx;
	padding-bottom:;
	padding:0 8rpx;
	margin-right:20rpx;
	color: #FA8072;
}
.score-box{
	text-align: left;
	line-height: 26rpx;
	margin: 10rpx 0 20rpx 0;
	display: flex;
	height: 26rpx;
}
.score-list{
	height: 26rpx;
	line-height: 26rpx;
	display: flex;
}
.score-text{
	font-size: 23rpx;
	color: #FF8C00;
	margin-top:7rpx;
	margin-left: 4rpx;
}
.score-box .iconfont{
	color: #FF8C00;
	font-size: 23rpx;
}
.btn-box{
	position: absolute;
	right:10rpx;
	top:15rpx;
	height: 40rpx;
	line-height: 40rpx;
	padding: 0 10rpx;
	text-align: center;
	color: #fff;
	background: rgba(0,0,0,0.7);
	font-size: 23rpx;
}
.noStatus{
	width: 45%;
	margin: 30% auto 30%;
}
.noStatus .pic-box{
	width: 100%;
	height: 350rpx;
	margin-bottom: 30rpx;
}
.noStatus .pic{
	width: 100%;
	height: 100%;
}
.noStatus .text{
	color: #333;
	font-size: 26rpx;
	margin-top: 10rpx;
	text-align: center;
}
.infoList-box{
	width: 100%;
}
.infoList-title{
	display: flex;
	width: 100%;
	border-bottom: 0.5rpx solid #dedede;
}
.infoList-title-item{
	position: relative;
	text-align: center;
	color: #979797;
	width: 25%;
	height: 90rpx;
	line-height: 90rpx;
	font-size: 30rpx;
}
.infoList-title .active{
	color: #fa5305;
}
.infoList-title .active:after{
	position: absolute;
	content: '';
	display: inline-block;
	left: 50%;
	bottom: 0;
	transform: translateX(-50%);
	width: 80%;
	height: 2rpx;
	background: #fa5305;
}
.newItem{
    background-color: #fff;
}
.avatar-img{
	width: 100%;
	height: 100%;
}
.titleWrapper{
	width: 75%;
}