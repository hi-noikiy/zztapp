<!--index.wxml-->
<view class="container">
    <view class="container-home" style="{{showClassify?'height:100%;overflow:hidden':''}}">
    	<swiper 
    		wx:if="{{!showClassify}}" 
    		class="swiper" 
    		indicator-dots="true" 
    		autoplay="true" 
    		interval="3000" 
    		duration="1000"
		>    
	        <block wx:for="{{movies}}" wx:key="unique">    
		        <swiper-item>    
		            <image src="{{item.url}}" class="slide-image" mode="aspectFill"/> 
		        </swiper-item>    
	        </block> 
	    </swiper>
	    <view wx:if="{{!showClassify}}" class="swiper-btn">
        	<view class="search-box">
	        	<i class="iconfont icon-search2"></i>
	        </view>
	        <view class="scan-box" bindtap="scanCode">
	        	<i class="iconfont icon-scan"></i>
	        </view>
        </view>

	    <view wx:if="{{!showClassify}}" class="shop-box">
	    	<view class="title-box">
	    		<view class="title">推荐店铺</view>
	    		<navigator url="../moveIn/create/index" class="btn">免费入驻</navigator>
	    	</view>
	    	<scroll-view class="shopList" scroll-x='true'>
	        	<view class="shop-item"  wx:for="{{movies}}" wx:key="unique">
                	<image class="pic" src="{{item.url}}" mode="aspectFill"/> 
                	<view class="shop-item-text">{{item.name}}</view>
	            </view>
		    </scroll-view>
	    </view>

	    <view wx:if="{{!showClassify}}" class="line"></view>
	    <view wx:if="{{showClassify}}" class="classicfy-box" bindtap="closeClassify" catchtouchmove="preventD">
	    	<view class="home-list-top">
		    	<scroll-view scroll-x='true' class="type-box">
		    		<view class="type-item" wx:for="{{cate}}" wx:key="{{index}}">{{item.cate_name}}</view>
		    	</scroll-view>
		    	<view class="btn" bindtap="showAllClassify">
	    			<i wx:if="{{!showClassify}}" class="iconfont icon-down-solid"></i>
	    			<i wx:if="{{showClassify}}" class="iconfont icon-up-solid"></i>
	    		</view>
    		</view>
    		<view class="classicfy">
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-food">
    					<i class="iconfont iconfont-classicfy icon-food"></i>
    				</view>
    				<view class="classicfy-item-text">餐饮美食</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-movie">
    					<i class="iconfont iconfont-classicfy icon-movie"></i>
    				</view>
    				<view class="classicfy-item-text">电影演出</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-hotel">
    					<i class="iconfont iconfont-classicfy icon-hotel"></i>
    				</view>
    				<view class="classicfy-item-text">酒店住宿</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-cup">
    					<i class="iconfont iconfont-classicfy icon-cup"></i>
    				</view>
    				<view class="classicfy-item-text">休闲娱乐</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-camera">
    					<i class="iconfont iconfont-classicfy icon-camera"></i>
    				</view>
    				<view class="classicfy-item-text">结婚摄影</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-board">
    					<i class="iconfont iconfont-classicfy icon-board"></i>
    				</view>
    				<view class="classicfy-item-text">艺术培训</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-sofa">
    					<i class="iconfont iconfont-classicfy icon-sofa"></i>
    				</view>
    				<view class="classicfy-item-text">家具建材</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-tshirt">
    					<i class="iconfont iconfont-classicfy icon-tshirt"></i>
    				</view>
    				<view class="classicfy-item-text">服装饰品</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-fridge">
    					<i class="iconfont iconfont-classicfy icon-fridge"></i>
    				</view>
    				<view class="classicfy-item-text">数码家电</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-medicine">
    					<i class="iconfont iconfont-classicfy icon-medicine"></i>
    				</view>
    				<view class="classicfy-item-text">医疗保健</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-car">
    					<i class="iconfont iconfont-classicfy icon-car"></i>
    				</view>
    				<view class="classicfy-item-text">汽贸汽修</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-fruit">
    					<i class="iconfont iconfont-classicfy icon-fruit"></i>
    				</view>
    				<view class="classicfy-item-text">水果生鲜</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-country">
    					<i class="iconfont iconfont-classicfy icon-country"></i>
    				</view>
    				<view class="classicfy-item-text">农家娱乐</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-money">
    					<i class="iconfont iconfont-classicfy icon-money"></i>
    				</view>
    				<view class="classicfy-item-text">金融服务</view>
    			</view>
    			<view class="classicfy-item">
    				<view class="iconbox iconbox-classicfy">
    					<i class="iconfont iconfont-classicfy icon-classify"></i>
    				</view>
    				<view class="classicfy-item-text">全部分类</view>
    			</view>
    		</view>
	    </view>
	    <view class="homeListBox" style="{{showClassify?'margin-top:620rpx':''}}">
	    	<view wx:if="{{!showClassify}}" class="home-list-top">
		    	<scroll-view scroll-x='true' class="type-box">
		    		<view 
                        class="type-item" 
                        wx:for="{{cate}}" 
                        wx:key="{{index}}" 
                        data-id='{{item.cate_id}}' 
                        bindtap='scrollTap'
                    >
                        {{item.cate_name}}
                    </view>
		    	</scroll-view>
		    	<view class="btn" bindtap="showAllClassify">
	    			<i wx:if="{{!showClassify}}" class="iconfont icon-down-solid"></i>
	    			<i wx:if="{{showClassify}}" class="iconfont icon-up-solid"></i>
	    		</view>
    		</view>
	    	<view class="home-list">
	    		<view 
                    class="home-list-item" 
                    wx:for="{{shopList}}" 
                    wx:key="{{index}}" 
                    data-id="{{item.shop_id}}" 
                    bindtap='tap'
                >
	    			<view class="pic">
	    				<image src="{{imagesSocket + item.logo}}" class='pic-avatar'></image>
	    			</view>
	    			<view class="desc">
	    				<view class="title">
	    					<view class="name">{{item.shop_name}}</view>
	    					<view class="distance">{{item.distance}}km</view>
	    				</view>
	    				<view class="score-box">
	    					<view class="score-list">
	    						<i wx:if="{{item.renjun>j}}" class="iconfont {{Math.round(item.renjun) > j ? 'icon-star' : 'icon-star'}}"  wx:for="[0,1,2,3,4]" wx:for-item="j" wx:key="{{index}}"></i>
	    					</view>
	    					<view class="score-text">{{item.renjun}}</view>
	    				</view>
	    				<view class="tabs">
	    					<view class="tab-itam" wx:for="{{item.inco}}" wx:key="{{index}}" wx:for-item="i">{{i}}</view>
	    				</view>
	    			</view>
	    		</view>
	    		<import src="../../resource/template/complete.wxml" />
  				<template is="complete" wx:if="{{isComplete}}"/>
	    	</view>
	    </view>
    </view>
</view>