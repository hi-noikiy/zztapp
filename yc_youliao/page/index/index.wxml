	                <view class="shop-item-text">家乐福超市</view>
	            </view>
	            <view class="shop-item">
	            	<view class="pic"></view>
	                <view class="shop-item-text">沃尔玛</view>
	            </view>
	            <view class="shop-item">
	            	<view class="pic"></view>
	                <view class="shop-item-text">永红幼儿园</view>
	            </view>
	            <view class="shop-item">
	            	<view class="pic"></view>
	                <view class="shop-item-text">青青家园网吧</view>
	            </view>
		    </scroll-view>
	    </view>

	    <view wx:if="{{!showClassify}}" class="line"></view>
	    <view wx:if="{{showClassify}}" class="classicfy-box" bindtap="closeClassify" catchtouchmove="preventD">
