<view class="container">
  <view class="search">
    <view class="icon1">
      <image style="width: 16px; height: 16px; background-color: #eeeeee;" mode="scaleToFill" src="../../resource/images/search.png"></image>
    </view>
    <view class="icon2" bindtap="scanCode">
      <image style="width: 16px; height: 16px; background-color: #eeeeee;" mode="scaleToFill" src="../../resource/images/twoCode.png"></image>
    </view>
  </view>
  <view class="swiper">
    <swiper indicator-dots="true" indicator-active-color="#fb5100" autoplay="true" interval="3000" duration="1200">
      <swiper-item wx:for="{{data.advs}}" wx:key="{{index}}">
        <image class="nav-icon" mode="scaleToFill" src="{{imagesSocket + item.thumb}}" />
      </swiper-item>
    </swiper>
  </view>
  <view class='addMsg'>
    <view class="weather" wx:if="{{weatherdata}}">
      <view class="imgWrapper">
        <image src="{{weatherImg}}"></image>
      </view>
      <view class="textWrapper">
        <view class="text">{{weatherdata.city}}
          <text class="col999">{{weatherdata.forecast[0].high}} ~ {{weatherdata.forecast[0].low}} </text>
          <text></text>{{weatherdata.forecast[0].type}}</view>
        <view class="text">{{date}}</view>
      </view>
    </view>
    <view class='checkIn' wx:if="data != null" bindtap='onCheckIn'>
      <text class='txt'>{{ checkIn ? '今日已签到' : '签到'}}</text>
      <text class='num' wx:if="{{!checkIn}}">{{data.credit == "-1" ? "获取随机积分" : "+" + data.credit +"积分"}}</text>
    </view> 
  </view>
  <view class="itemSwiper">
    <swiper autoplay="true" interval="3000" duration="1200">
      <swiper-item indicator-dots="moduleLen > 1" wx:for="{{moduleLen}}" wx:for-item="i" wx:key="{{index}}">
        <block wx:for="{{data.module.length - i * 8 >= 8 ? 8 : data.module.length - i * 8}}" wx:for-item="j">
          <view class="item">
            <navigator url="../moduleList/moduleList?id={{data.module[i * 8 + j].id}}">
              <view class="imgWrapper">
                <image src="{{imagesSocket + data.module[i * 8 + j].thumb}}"></image>
              </view>
              <text>{{data.module[i * 8 + j].name}}</text>
            </navigator>
          </view>
        </block>
      </swiper-item>
    </swiper>
  </view>
  <view class="news">
    <view class="newsItem {{newsNum == 1 ? 'check' : ''}}" data-newsnum="1" bindtap="newClick">
      最新
    </view>
    <view class="newsItem {{newsNum == 2 ? 'check' : ''}}" data-newsnum="2" bindtap="newClick">
      置顶
    </view>
    <view class="newsItem {{newsNum == 3 ? 'check' : ''}}" data-newsnum="3" bindtap="newClick">
      热门
    </view>
  </view>
  <view hidden="{{!(newsNum == 1)}}">
    <import src="../../resource/template/indexList.wxml" />
    <template is="list" data="{{data:data.newMsg,imagesSocket,newImg: true}}" />
  </view>
  <view hidden="{{!(newsNum == 2)}}">
    <import src="../../resource/template/indexList.wxml" />
    <template is="list" data="{{data:data.topMsg,imagesSocket,newImg: true}}" />
  </view>
  <view hidden="{{!(newsNum == 3)}}">
    <import src="../../resource/template/indexList.wxml" />
    <template is="list" data="{{data:data.hotMsg,imagesSocket,newImg: true}}" />
  </view>
