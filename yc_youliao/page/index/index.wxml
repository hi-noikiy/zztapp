<!--index.wxml-->
<view class="container">
    <view class="container-home" hidden="{{currentTab != 0}}" style="{{showClassify?'height:100%;overflow:hidden':''}}">
    	<swiper wx:if="{{!showClassify}}" class="swiper" indicator-dots="true" autoplay="true" interval="3000" duration="1000">    
	        <block wx:for="{{movies}}" wx:key="unique">    
		        <swiper-item>    
		          <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>  
		        </swiper-item>    
	        </block> 
	    </swiper>
	    <view wx:if="{{!showClassify}}" class="swiper-btn">
        	<view class="search-box">
	        	<i class="iconfont icon-search2"></i>
	        </view>
	        <view class="scan-box">
	        	<i class="iconfont icon-scan"></i>
	        </view>
        </view>

	    <view wx:if="{{!showClassify}}" class="shop-box">
	    	<view class="title-box">
	    		<view class="title">推荐店铺</view>
	    		<navigator url="../moveIn/create/index" class="btn">免费入驻</navigator>
	    	</view>
	    	<scroll-view class="shopList" scroll-x='true'>
	        	<view class="shop-item">
	                <view class="pic"></view>
	                <text class="shop-item-text">顾村新街幼儿园</text>
	            </view>
	            <view class="shop-item">
	            	<view class="pic"></view>
	                <view class="shop-item-text">中国电信</view>
	            </view>
	            <view class="shop-item">
