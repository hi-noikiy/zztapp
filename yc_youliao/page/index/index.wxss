/* yc_youliao/my/my.wxss */
page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.container-home{
	width: 100%;
	box-sizing: border-box;
}
.swiper {
	height: 300rpx;
	width: 100%;
	position: relative;
}
.swiper image {
	height: 100%;
	width: 100%;
}
.swiper-btn{
	position: fixed;
	top: 15rpx;
	right: 30rpx;
	display: flex;
}
.swiper-btn .iconfont{
	font-size: 13pt;
	color: #000;
}
.search-box, .scan-box{
	width: 70rpx;
	height: 50rpx;
	line-height: 50rpx;
	background: #ADADAD;
	text-align: center;
}
.search-box{
	border-top-left-radius:25rpx;
	border-bottom-left-radius:25rpx;
	border-right: 1rpx solid #979797;
}
.scan-box{
	border-top-right-radius:25rpx;
	border-bottom-right-radius:25rpx;
	margin-right: 1rpx;
}
.shop-box{
	
}
.shop-box .title-box{
	display: flex;
	justify-content: space-between;
	line-height:50rpx;
	font-size:30rpx;
	padding: 20rpx;
}
.shop-box .title-box .btn{
	font-size:23rpx;
	padding:10rpx 15rpx;
	background:#ff7803;
	color:#fff;
	height:23rpx;
	line-height:23rpx;
	margin-top:5rpx;
	border-radius: 10rpx;
}
.shopList{
	width: 100%;
	white-space: nowrap;
	padding-left: 20rpx;
}
.shop-box .shop-item{
	display: inline-block;
	width: 227rpx;
	margin-right: 20rpx;
	text-align: center;
}
.shop-item .pic{
	height: 160rpx;
	background: red;
	border-radius: 15rpx;
}
.shop-item-text{
	font-size: 23rpx;
	margin-top: 15rpx;
	color: #777;
	margin-bottom: 10rpx;
}
.line{
	width: 100%;
	height: 15rpx;
	background: #dedede;
}
.classicfy{
  	padding: 20rpx 10rpx;
  	display: flex;
  	flex-wrap: wrap;
  	border-bottom: 0.5rpx solid #dedede;
  	background: #fff;
}
.classicfy-item{
	width: 20%;
	text-align: center;
	margin-bottom: 30rpx;
}
.iconbox{
	height:88rpx;
	line-height:88rpx;
	width:88rpx;
	border-radius:50%;
	background:green;
	margin:0 auto;
	color: #fff;
}
.iconbox .iconfont{
	font-size: 50rpx;
}
.iconbox .icon-camera{
	font-size:45rpx;
}
.classicfy-item-text{
	font-size:24rpx;
	margin-top:10rpx;
}
.iconbox-food{
	background: #FFD700;
}
.iconbox-tshirt{
	background: #FF1493;
}
.iconbox-fridge{
	background: #3A5FCD;
}
.iconbox-medicine{
	background: #00CD00;
}
.iconbox-car{
	background: #8B4513;
}
.iconbox-fruit{
	background: #FF7F00;
}
.iconbox-food .iconfont{
	font-size: 44rpx;
}
.iconbox-movie, .iconbox-board{
	background: #FF0000;
}
.iconbox-hotel, .iconbox-classicfy{
	background:#1E90FF;
}
.iconbox-cup, .iconbox-money{
	background: #8A2BE2;
}
.iconbox-cup .iconfont{
	font-size:40rpx;
}
.iconbox .icon-tshirt{
	font-size: 42rpx;
}
.iconbox .icon-fridge{
	margin-top: -3rpx;
}
.icon-medicine{
	margin-top:-11rpx;
	margin-left:4rpx;
}
.iconbox .icon-classify{
	font-size: 39rpx;
}
.iconbox-camera, .iconbox-sofa, .iconbox-country{
	background: #40E0D0;
}
.iconbox-board{
	
}
.iconbox .iconfont-classicfy{
	display:inline-block;
}
.homeListBox{
	text-align: center;
}
.classicfy-box{
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 120%;
	z-index: 2;
	background-color:rgba(15, 15, 26, 0.7); 
	text-align: center;
}
.classicfy-box .home-list-top{
	background: #fff;
}
.home-list-top{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	display: flex;
	border-bottom: 0.5rpx solid #dedede;
}
.home-list-top .type-box{
	flex: 1;
	font-size: 26rpx;
	display: flex;
	border-right: 0.5rpx solid #dedede;
}
.home-list-top .type-box .type-item{
	width: 25%;
}
.home-list-top .btn{
	width: 90rpx;
	font-size: 20rpx;
}
.home-list .home-list-item{
	padding: 15rpx 20rpx; 
	display: flex;
	border-bottom: 0.5rpx solid #dedede;
}
.home-list .home-list-item .pic{
	width: 120rpx;
	height: 120rpx;
	background: green;
}
.home-list .home-list-item .desc{
	flex: 1;
	margin-left: 15rpx;
}
.home-list-item .desc .title{
	display: flex;
	justify-content: space-between;
	font-size:26rpx;
}
.home-list-item .desc .title .name{
	font-weight:600;
}
.home-list-item .desc .title .distance{
	color: #FF8C00;
}
.home-list-item .desc .tabs{
	display: flex;
}
.home-list-item .desc .tabs .tab-itam{
	font-size:23rpx;
	padding:0 5rpx;
	border:0.5rpx solid #ff7c77;
	border-radius:10rpx;
	height:34rpx;
	line-height:34rpx;
	padding-bottom:;
	padding:0 5rpx;
	margin-right:20rpx;
	color: #FA8072;
}
.mask{
	position: absolute;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	background: #000;
	z-index: 1;
	opacity:0.7;
}
.score-box{
	text-align: left;
	line-height: 26rpx;
	margin: 0 0 20rpx 0;
	display: flex;
	height: 26rpx;
}
.score-list{
	height: 26rpx;
	line-height: 26rpx;
}
.score-text{
	font-size: 20rpx;
	color: #f9984b;
}
.score-box .iconfont{
	color: #FF8C00;
	font-size: 20rpx;
}
.top{
	background-color: #fff;
	padding: 20rpx 30rpx;
	font-size: 0;
	margin-bottom: 20rpx;
}
.top .avatar{
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	display: inline-block;
	vertical-align: top;
}
.top .name{
	display: inline-block;
	font-size: 32rpx;
	padding-left: 40rpx;
	line-height: 120rpx
}

.item,.itemTitle{
	padding: 20rpx;
	line-height: 66rpx;
	font-size: 32rpx;
	padding-left: 80rpx;
	background-color: #fff;
	border-bottom: 0.5rpx solid #eee;
	position: relative;
	color: #666;
}
.itemTitle{
	padding-left: 30rpx;
	color: #222;
	font-weight: 700
}
.itemTitle:after{
	content: '';
	position: absolute;
	top: 38rpx;
	width: 16rpx;
	height: 16rpx;
	border-right: 2rpx solid #777;
	border-top: 2rpx solid #777;
	transform: rotate(135deg);
	right: 40rpx;
	transition: transform .2s;
}
.itemTitle.hide:after{
	transform: rotate(45deg);
}

.item{
	padding-left: 40rpx;
}
.item:last-child{
	border-bottom: none;
}
.item:after{
	content: '';
	position: absolute;
	right: 40rpx;
	top: 38rpx;
	width: 16rpx;
	height: 16rpx;
	border-right: 2rpx solid #777;
	border-top: 2rpx solid #777;
	transform: rotate(45deg)
}

.iconfont-my{
	font-size:15pt;
	margin-right:13rpx;
	vertical-align:-6%;
}
.icon-city{
	color:#40E0D0;
}
.icon-store{
	color: #0000CD;
}
.icon-star{
	color: red;
}
.icon-msg-solid{
	color: #4169E1;
}
.icon-publish{
	color: #32CD32;
}
.icon-coupon{
	color: #FF6347;
}

.active {
	color: #fa5305;
}