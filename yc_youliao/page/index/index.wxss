/* yc_youliao/my/my.wxss */
page{
    background-color: #f4f4f4
}
.swiper {
    height: 300rpx;
    width: 100%;
    margin-bottom: 30rpx;
    position: relative;
}
.swiper image {
    height: 100%;
    width: 100%;
}
.swiper-btn{
    position: absolute;
    top: 15rpx;
    right: 30rpx;
    display: flex;
}
.swiper-btn .iconfont{
    font-size: 13pt;
    color: #222;
}
.search-box, .scan-box{
    width: 70rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #dedede;
    text-align: center;
}
.search-box{
    border-top-left-radius:25rpx;
    border-bottom-left-radius:25rpx;
}
.scan-box{
    border-top-right-radius:25rpx;
    border-bottom-right-radius:25rpx;
    margin-right: 1rpx;
}
.shop-box{
    
}

.type-box{
    width: 100%;
    height: 150rpx;
    white-space: nowrap;
}
.type-box .type-item{
    display: inline-block;
    width: 150rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-right: 0.5rpx solid #dedede;
    text-align: center;
    margin-top: 30rpx;
}
.type-item i{
    font-size: 20pt;
    display: block;
}
.type-item-text{
    font-size: 7pt;
    margin-top: 10rpx;
}

.top{
    background-color: #fff;
    padding: 20rpx 30rpx;
    font-size: 0;
    margin-bottom: 20rpx;
}
.top .avatar{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: inline-block;
    vertical-align: top;
}
.top .name{
    display: inline-block;
    font-size: 32rpx;
    padding-left: 40rpx;
    line-height: 120rpx
}

.item,.itemTitle{
    padding: 20rpx;
    line-height: 66rpx;
    font-size: 32rpx;
    padding-left: 80rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
    position: relative;
    color: #666;
}
.itemTitle{
    padding-left: 30rpx;
    color: #222;
    font-weight: 700
}
.itemTitle:after{
    content: '';
    position: absolute;
    top: 38rpx;
    width: 16rpx;
    height: 16rpx;
    border-right: 2rpx solid #777;
    border-top: 2rpx solid #777;
    transform: rotate(135deg);
    right: 40rpx;
    transition: transform .2s;
}
.itemTitle.hide:after{
    transform: rotate(45deg);
}

.item{
    padding-left: 40rpx;
}
.item:last-child{
    border-bottom: none;
}
.item:after{
    content: '';
    position: absolute;
    right: 40rpx;
    top: 38rpx;
    width: 16rpx;
    height: 16rpx;
    border-right: 2rpx solid #777;
    border-top: 2rpx solid #777;
    transform: rotate(45deg)
}

.iconfont-my{
    font-size:15pt;
    margin-right:13rpx;
    vertical-align:-6%;
}
.icon-city{
    color:#40E0D0;
}
.icon-store{
    color: #0000CD;
}
.icon-star{
    color: red;
}
.icon-msg-solid{
    color: #4169E1;
}
.icon-publish{
    color: #32CD32;
}
.icon-coupon{
    color: #FF6347;
}

.tab {
    position: fixed;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    background: #F8F8FA;
    font-size: 24rpx;
    white-space: nowrap;
    border-top: .5rpx solid #dedede;
}
.tab_item {
    display: inline-block;
    width: 33.333%;
    text-align: center;
}
.active {
	color: #FFA500;
}
.iconfont-tab {
	margin-top: 14rpx;
    width: 55rpx;
    height: 55rpx;
    line-height: 55rpx;
    display: inline-block;
    font-size: 40rpx;
    text-aglin: center;
}
.icon-compass{
    font-size:45rpx;
}
