page{
  background-color: #e9e9e9;
}
.pay .price{
  text-align: center;
  line-height: 70rpx;
  font-size: 70rpx;
  padding: 16rpx 0;
  font-weight: 700;
}
.pay .des{
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  background-color: #fff;
}
.pay .line{
  display: flex;
  justify-content: space-between;
  padding: 20rpx; 
  font-size: 32rpx;
}
.pay .line .right{
  font-weight: 700;
}
.pay .btn{
  width: 90%;
  margin: 0 auto;
  background-color: #1aad19;
  color: #fff;
  line-height: 80rpx;
  font-size: 36rpx;
  border-radius: 6px;
  text-align: center;
}
.pay .btn.cancle{
  margin-top: 30rpx;
  background-color: #f9f9f9;
  color: #222;
}