page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.couponList{
	width: 100%;
	padding: 30rpx 20rpx;
	box-sizing:border-box;
}
.coupon-item{
	padding: 0 20rpx 30rpx 20rpx;
	background: #fff;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
}
.title-box{
	display: flex;
	border-bottom: 0.5rpx solid #dedede;
	height: 70rpx;
	line-height: 70rpx;
}
.headImg{
	width:40rpx;
	height:40rpx;
	border-radius:50%;
	background:green;
	margin-right:15rpx;
	margin-top:15rpx;
}
.title{
	flex: 1;
	font-size:28rpx;
}
.coupon-content{
	display: flex;
	position: relative;
}
.money{
	width:200rpx;
	text-align:center;
	padding-top:40rpx;
	font-size:90rpx;
	color:red;
}
.money i{
	font-size: 30rpx;
}
.desc{
	padding-top:40rpx;
	font-size:24rpx;
	color: #979797;
}
.detail{
	font-size:30rpx;
	font-weight:600;
	color: #000;
}
.time{
	margin: 10rpx 0;
}
.btn{
	position:absolute;
	top:50%;
	transform: translateY(-25%);
	right:15rpx;
	height:40rpx;
	line-height:40rpx;
	border:0.5rpx solid red;
	font-size:24rpx;
	padding:0 28rpx;
	border-radius:22rpx;
	color:red;
}