page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.container-coupon-create{
	width: 100%;
	font-size: 30rpx;
}
.top{
	hieght: 120rpx;
	line-height: 120rpx;
	display: flex;
}
.img{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin: 20rpx 25rpx 0 25rpx;
	background: green;
}
.line{
	width: 100%;
	height: 20rpx;
	background: #dedede;
}
.item{
	padding: 0 25rpx;
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 0.5rpx solid #dedede;
	display: flex;
	justify-content: space-between;
	position: relative;
}
.input{
	width: 200rpx;
	height: 100%;
}
.unit{
	position: absolute;
	right: 25rpx;
	top: 50%;
	transform: translateY(-50%);
}
.tips{
	padding: 0 45rpx;
	font-size: 25rpx;
	color: #777;
	margin: 40rpx 0 60rpx 0;
}
.btn{
	width: 75%;
	margin: 0 auto;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	font-size: 26rpx;
	color: #fff;
	background: red;
	border-radius: 15rpx;
}