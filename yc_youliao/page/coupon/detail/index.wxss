page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.container-coupon{
	padding-top:35rpx;
	box-sizing:border-box;
	width: 100%;
}

.coupon-area{
	width: 92%;
	margin: 0 auto;
	border-radius: 20rpx;
	background: #e35a50;
	padding: 40rpx;
	box-sizing:border-box;
	color: #fff;
	text-align: center;
	font-size: 23rpx;
}

.info{
	padding: 5rpx 0 25rpx 0;
	border-bottom: 0.5rpx dotted #fff;
}
.head{
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	margin: 0 auto;
	background: green;
}
.name{
	font-size: 26rpx;
	margin: 12rpx 0 15rpx 0;
}
.tel{
	margin-top: 10rpx;
}
.actives{
	font-size: 40rpx;
	margin: 40rpx  0 30rpx 0;
}
.qcord-box{
	width:63%;
	margin:0 auto;
	background:#fff;
	padding:20rpx 30rpx 15rpx 30rpx;
	box-sizing:border-box;
}
.qcord-img{
	width: 100%;
	height: 285rpx;
	background: #dedede;
}
.qcord-num{
	margin-top: 20rpx;
	font-size: 23rpx;
	color: #000;
}
.time{
	margin:35rpx 0 15rpx;
}
.caution{
	height: 75rpx;
	line-height: 75rpx;
	width: 75%;
	margin: 40rpx auto 0;
	text-align: center;
	background: #fff;
	border-radius: 10rpx;
	color: red;
	font-size: 28rpx;
}
.tips{
	font-size:25rpx;
	color:#777;
	padding: 0 30rpx;
}
.tips-item{
	margin: 35rpx 0 20rpx 0;
}
.img{
	width: 100%;
	height: 100%;
}