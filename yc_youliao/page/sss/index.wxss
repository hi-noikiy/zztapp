/* yc_youliao/index/index.wxss */
.container{
  position: relative;
  padding-bottom: 60rpx;
  box-sizing: border-box;
  background-color: #f4f4f4;
}
.container .search{
  position: absolute;
  display: flex;
  top: 5px;
  right: 15px;
  z-index: 10;
  width: 80px;
  height: 26px;
  line-height: 30px;
  background-color: #eee;
  border-radius: 15px;
  font-size: 12px;
  opacity: 0.8;
  text-align: center;
}
.icon1,.icon2{
  flex:1;
  padding-top: 3px;
}
.icon1{
  border-right: 1rpx solid #ccc;
}
 .swiper {
  width: 100%;
  height:251rpx;
} 

 .swiper swiper,  .itemSwiper swiper{
  background-color: #fff;
  width: 100%;
  height: 100%;
} 
.itemSwiper {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
image {
  width: 100%;
  height: 100%;
}
.addMsg{
  display: flex;
  padding: 20rpx;
  padding-bottom: 12rpx;
  background-color: #fff;
}
.checkIn{
  border: 1rpx solid #32d75a;
  border-radius: 5px;
  line-height: 60rpx;
  height: 66rpx;
  font-size: 30rpx;
  margin-top: 7rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  position: relative;
}
.checkIn .txt{
  display: inline-block;
  position: relative;
}
.checkIn .txt::before{
  content: '';
  position: absolute;
  width: 1rpx;
  height: 36rpx;
  right: -10rpx;
  top: 15rpx;
  background-color: #eee;
}
.checkIn .num{
  color: #fccb33;
  display: inline-block;
  padding-left: 20rpx;
}
.weather{
  flex: 1;
}
text{
  font-size: 28rpx;
}
.weather .imgWrapper{
  vertical-align: top;
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
}
.weather .textWrapper{
  display: inline-block;
  margin-left: 20rpx;
}
.weather .textWrapper .text{
  font-size: 24rpx;
  line-height: 24rpx;
}
.weather .textWrapper .text:first-child{
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}
.itemSwiper{
  height: 360rpx;
}
.itemSwiper .item{
  float: left;
  width: 25%;
  text-align: center;
  padding: 15rpx 0;
}
.itemSwiper .item .imgWrapper{
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
}
.news {
  width: 100%;
  background-color: #fff;
}
.news .newsItem {
  display: inline-block;
  width: 33.3%;
  color: #222;
  font-size: 32rpx;
  line-height: 68rpx;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #eee;
}
.news .newsItem:after{
  content: '';
  position: absolute;
  width: 50%;
  height: 2px;
  background-color: transparent;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.news .newsItem.check{
  color: #fb5100;
}
.news .newsItem.check:after{
  background-color: #fb5100;
}
.newItem{
  background-color: #fff;
}
.seckill {
}

.seckill .top {
  line-height: 70rpx;
  height: 70rpx;
  font-size: 12px;
  padding-left: 20rpx;
}

.seckill .top .timeWrapper {
  padding: 2px;
  background-color: #222;
  color: #fff;
  border-radius: 3px;
  font-size: 12px;
}

.seckill .top .more {
  float: right;
  padding-right: 50rpx;
  position: relative;
}

.seckill .top .more::after {
  position: absolute;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 1rpx solid #222;
  border-right: 1rpx solid #222;
  transform: rotate(45deg) translateY(-60%);
  right: 22rpx;
  top: 50%;
}

.seckill .bottom {
  padding: 10rpx;
}

.seckill .bottom .item {
  float: left;
  width: 33.3%;
  padding: 0 10rpx 20rpx;
  box-sizing: border-box;
}

.seckill .bottom .item image {
  width: 100%;
  height: 200rpx;
  vertical-align: top;
}

.seckill .bottom .item .txt {
  line-height: 50rpx;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
  font-weight: bold;
  width: 100%; 
  text-align: center;
}
.seckill .bottom .price{
  font-size: 12px;
  color: #fb5100;
  line-height: 40rpx;
}
.seckill .bottom .price .before{
  text-decoration: line-through;
  font-size: 22rpx;
  padding-left: 6rpx;
  color: #222;
}