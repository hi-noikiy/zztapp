/* yc_youliao/page/myPayInfo/myPayInfo.wxss */
page{
  background-color: #f5f5f5;
}
.myPayInfo .title{
  width: 60%;
  display: flex;
  margin: 20rpx auto;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  height: 60rpx;
  border: 1px solid #fb5100;
  border-radius: 6px;
  color: #fb5100;
}
.myPayInfo .title .li{
  flex: 1;
}
.myPayInfo .title .li.checked{
  background-color: #fb5100;
  color: #fff;
}
.myPayInfo .item{
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.myPayInfo .item:last-child{
  border-bottom: none;
}
.item .itemTitle{
  line-height: 50rpx;
  font-size: 32rpx;
}
.item .itemTitle .flag{
  padding-right: 20rpx;
  color: #fb5100;
}
.item .timeWrapper{
  padding-top: 10rpx;
  line-height: 50rpx;
  height: 50rpx;
  font-size: 32rpx;
  color: #666;
}
.item .time{
  font-size: 28rpx;
}
.col{
  color: #fb5100;
}
.item .topTime{
  display: inline-block;
  background-color: #ccc;
  color: #222;
  font-size: 26rpx;
  border-radius: 8px;
  padding: 6rpx 20rpx;
  margin-top: 6rpx;
}
.warn{
  padding-top: 20px;
  text-align: center;
  font-size: 32rpx;
  font-weight: normal;
}