/* yc_youliao/detail/detail.wxss */

page {
  height: 100%;
  background-color: #eee;
  position: relative;
}
.warn{
  line-height: 60rpx;
  text-align: center;
  color: #fb5100;
  font-size: 32rpx;
  background-color: #ddd
}
.detail {
  height: 100%;
}

.detailSwiper {
  height: auto;
}

.swiper .img {
  width: 100%;
}

.topImg {
  width: 100%;
}
.topTitle {
  font-size: 28rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
  font-weight: 700;
  display: flex;
  padding-top: 10rpx;
}
.topTitle .left{
  flex: 1;
}
.topTitle .right{
  flex: 0 0 100px;
  padding: 8px 10px 8px 15px;
  box-sizing: border-box;
}
.topTitle .right .wrapper{
  display: inline-block;
  width: 100%;
  text-align: center;
}
.topTitle .right .icon{
  display: block;
  width: 25px;
  height: 25px;
  margin: 0 auto
}
.topTitle .right .text{
  text-align: center;
  font-size: 30rpx;
  line-height: 30rpx;
  padding-top: 20rpx;
  font-weight: 500;
  color: #222;
}
.topTitle .right .text.checked{
  color: #fb5100;
}
.topTitle .des {
  padding: 10rpx 20px 20rpx;
  line-height: 60prx;
  font-size: 28px;
  font-weight: 500;
  color: #666;
  display: flex;
  justify-content: space-between;
}
.topTitle .time.liulan{
}
.topTitle .time{
  color: #999;
  font-size: 10px;
}
.boxWrapper{
  padding: 0 24rpx;
  background-color: #fff;
}
.infoItem, .images {
  display: flex;
  color: #666;
  border-bottom: 1rpx solid #eee;
  line-height: 80rpx;
  text-align: left;
  font-size: 13px;
}

.infoItem .title {
  flex: 0 0 160rpx;
  color: #222;
  font-weight: 700;
}

.infoItem .content {
  flex: 1;
  padding-right: 20rpx;
}
.infoItem {
  padding: 12rpx 0;
}
.welfare {
  color: #666;
  font-size: 13px;
  line-height: 60rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.welfare .iconItem {
  display: inline-block;
  padding: 0 20rpx;
  border: 1rpx solid #01a901;
  border-radius: 4px;
  color: #01a901;
  margin: 0 20rpx 20rpx 0;
}

.images {
  display: block;
}

.images .title {
  color: #222;
  font-weight: 700;
}
.images .imgsWrapper .img{
  display: inline-block;
  vertical-align: top;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  width: 200rpx;
  height: 200rpx;
}
.mapWrapper {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  font-size: 12px;
}

.mapWrapper .img {
  display: inline-block;
  padding-top: 20rpx;
  padding-left: 24rpx;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.mapWrapper .text {
  float: right;
  margin-top: 20rpx;
  color: #fff;
  background-color: #fb5100;
  margin-right: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
  padding: 6rpx 15rpx;
  border-radius: 4px;
}

.other {
  height: 40px;
  line-height: 40px;
  font-size: 13px;
  border-top: 1px solid #ddd;
  background-color: #fff;
  position: relative;
  display: flex;
  padding: 5px 10rpx;
}

.other .imgWrapper {
  display: inline-block;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  vertical-align: top;
  overflow: hidden;
}

.other .imgWrapper image {
  width: 100%;
  height: 100%;
}

.other .name {
  padding-left: 10rpx;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.other .btnWrapper {
  float: right;
  font-size: 0;
  padding-top: 2px;
}

.other .btn{
  display: inline-block;
  padding: 0 30rpx;
  line-height: 36px;
  height: 36px;
  color: #fff;
  font-size: 28rpx;
  background-color: #fb5100;
  border-radius: 20px;
  box-sizing: border-box;
}
.other .btn.comment{
  margin: 0;
  margin-right: 20rpx;
  background-color: #F1A82A;
}
.other .img {
  display: inline-block;
  width: 20px;
  height: 20px;
  padding-top: 8px;
  margin-right: 2px;
  vertical-align: top;
} 


.goHome {
  position: absolute;
  top: -100rpx;
  width: 60rpx;
  height: 60rpx;
  right: 30rpx;
  background-color: rgba(42, 42, 42, 0.8);
  border-radius: 50%;
  padding: 10rpx;
}

.goHome image {
  width: 60rpx;
  height: 60rpx;
}
.comment{
  margin: 10rpx 0;
  padding-left: 24rpx;
  padding-bottom: 24rpx;
  background-color: #fff;
}
.comment .txt{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #222;
  border-bottom: 1rpx solid #eee;
  padding: 16rpx 0;
}
.comment .con{
  display: flex;
  padding: 26rpx 0;
  border-bottom: 1rpx solid #eee;
}
.comment .con:last-child{
  border-bottom: none;
  padding-bottom: 0;
}
.comment .avatarWrapper{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}
.comment .right{
  padding-left: 32rpx;
  flex: 1;
  padding-right: 32rpx;
}
.comment .top .name{
  float: left;
  font-size: 30rpx;
  color: #888;
  line-height: 60rpx;
}
.comment .top .time{
  float: right;
  font-size: 26rpx;
  color: #999;
  line-height: 60rpx;
}
.comment .bom{
  padding-top: 10rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #222;
}
.commentInputWrapper{
  position: absolute;
  left: 0;
  right: 0;
  height: 100%;
  z-index: 100;
  top: 0;
  background-color: rgba(42, 42, 42, 0.6);
  display: flex;
  flex-direction: column;
}
.commentInputWrapper .title{
  line-height: 60rpx;
  font-size: 32rpx;
  color: #222;
  padding-bottom: 15rpx;
}
.commentInputWrapper .inputWrapper{
  width: 100%;
  background-color: #eee;
  padding: 5px 10px;
  box-sizing: border-box;
  padding-bottom: 10px;
  z-index: 200;
}
.commentInputWrapper .area{
  width: 100%;
  height: 100px;
  background-color: #fff;
  line-height: 26px;
  font-size: 13px;
  color: #333;
  border-radius: 4px;
  border: 1rpx solid #ddd;
  padding: 5px 10px;
  box-sizing: border-box;
  margin-bottom: 10px;
}
.commentInputWrapper .cancle,.commentInputWrapper .sure{
  display: inline-block;
  width: 40%;
  height: 32px;
  line-height: 32px;
  color: #222;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
}
.commentInputWrapper .sure{
  margin-left: 20px;
  background-color: #01a901;
  color: #fff;
  border: 1px solid #01a901;
}
.commentInputWrapper .cancleArea{
  flex: 1;
}