page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.moveInList{
	width:100%;
	box-sizing:border-box;
	background:#fff;
	margin-top:20rpx;
}
.home-list-item{
	display: flex;
	border-bottom: 0.5rpx solid #dedede;
	position:relative;
	width:100%;
	box-sizing:border-box;
	justify-content: space-between;
}
.del {
    background-color: orangered;
    width: 90px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
    -webkit-transform: translateX(0);
    transform: translateX(0);
}
.home-list-item .pic{
	width: 140rpx;
	height: 140rpx;
}
.home-list-item .pic .img{
	width: 100%;
	height: 100%;
}
.home-list-item .desc{
	flex: 1;
	margin-left: 15rpx;
}
.home-list-item .desc .title{
	display: flex;
	justify-content: space-between;
	font-size:30rpx;
}
.home-list-item .desc .title .name{
	font-weight:600;
}
.home-list-item .desc .tabs{
	display: flex;
}
.home-list-item .desc .tabs .tab-itam{
	font-size:23rpx;
	padding:0 5rpx;
	border:0.5rpx solid #FA8072;
	border-radius:10rpx;
	height:36rpx;
	line-height:36rpx;
	padding-bottom:;
	padding:0 8rpx;
	margin-right:20rpx;
	color: #FA8072;
}
.score-box{
	text-align: left;
	line-height: 26rpx;
	margin: 10rpx 0 20rpx 0;
	display: flex;
	height: 26rpx;
}
.score-list{
	height: 26rpx;
	line-height: 26rpx;
	display: flex;
}
.score-text{
	font-size: 23rpx;
	color: #FF8C00;
	margin-top:7rpx;
	margin-left: 4rpx;
}
.score-box .iconfont{
	color: #FF8C00;
	font-size: 23rpx;
}

.noStatus{
	width: 45%;
	margin: 30% auto 30%;
}
.noStatus .pic-box{
	width: 100%;
	height: 350rpx;
	margin-bottom: 30rpx;
}
.noStatus .pic{
	width: 100%;
	height: 100%;
}
.noStatus .text{
	color: #333;
	font-size: 26rpx;
	margin-top: 10rpx;
	text-align: center;
}
.noStatus .text2{
	border:1rpx solid #dedede;
	height:60rpx;
	line-height:60rpx;
	border-radius:15rpx;
	margin-top:20rpx;
}
.touch-item {
    font-size: 14px;
    display: flex;
    justify-content: space-between;
    border-bottom:1px solid #ccc;
    width: 100%;
    overflow: hidden
}
.content {
	display: flex;
    width: 100%;
    padding: 10px;
    line-height: 22px;
    margin-right:0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    margin-left: -90px;
}
.del {
    width: 90px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    color: #fff;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}
.btn-item{
	background-color: orangered;
	width: 50%;
	height: 100%;
	text-align:center;
	line-height:170rpx;
}
.left-btn{
	position: relative;
}
.left-btn:after{
	content: '';
	position: absolute;
	display: inline-block;
	right: 0;
	top: 47%;
	width: 1rpx;
	height: 15%;
	transform: translateY(-50%);
	background: #dedede;
}
.touch-move-active .content,
.touch-move-active .del {
    -webkit-transform: translateX(0);
    transform: translateX(0);
}