page {
  background-color: #f5f5f5;
}
.item .imagewrapper .img{
  display: inline-block;
  width: 66px;
  height: 66px;
  margin-right: 6px;
  margin-bottom: 6px;
  vertical-align: top;
}
.item .imageUploader {
  display: inline-block;
  position: relative;
  width: 66px;
  height: 66px;
  border: 1px solid #d9d9d9;
  margin-right: 6px;
  margin-bottom: 6px;
}

.item .imageUploader:after, .item .imageUploader:before {
  content: " ";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #d9d9d9;
}

.item .imageUploader:after {
  width: 36.5px;
  height: 2px;
}

.item .imageUploader:before {
  width: 2px;
  height: 36.5px;
}
.item .imageUploader.del:before {
  display: none;
}
.item .imageUploader:active {
  border-color: #999; 
}
.item .imageUploader:active:before,.item .imageUploader:active:after{
  background-color: #999;
}
