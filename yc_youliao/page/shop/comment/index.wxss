page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.container-comment{
	width: 100%;
	box-sizing: border-box;
	font-size: 28rpx;
}
.score-box{
	width: 100%;
	display: flex;
	height: 90rpx;
	line-height: 90rpx;
	box-sizing: border-box;
	justify-content: space-between;
	padding: 0 15rpx 0 30rpx;
	border-bottom: 0.5rpx solid #dedede;
}
.iconfont{
	color: #dedede;
	margin-right: 10rpx;
}
.active{
	color: #fa5305;
}
.textarea{
	width: 100%;
	height: 300rpx;
	padding: 0 30rpx 30rpx 30rpx;
	box-sizing: border-box;
}
.lineWihte{
	width: 100%;
	height: 35rpx;
}
.btn{
	width: 60%;
	height: 85rpx;
	line-height: 85rpx;
	background: #fa5305;
	color: #fff;
	text-align: center;
	border-radius: 15rpx;
	margin-top: 30rpx;
}