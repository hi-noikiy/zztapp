page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.container-shop{
	box-sizing:border-box;
	width: 100%;
}
.swiper {
	height: 345rpx;
	width: 100%;
	position: relative;
}
.swiper image {
	height: 100%;
	width: 100%;
}
.swiper-btn{
	position:fixed;
	top: 15rpx;
	right: 0;
	width:116rpx;
	height:50rpx;
	line-height:50rpx;
	background:#000;
	color:#fff;
	font-size:27rpx;
	text-align:center;
	opacity: 0.7;
}
.shop-title-box{
	text-align: center;
	position: relative;
	padding-bottom: 20rpx;
	border: 0.5rpx solid #dedede;
}
.shop-title-box .title{
	font-size: 32rpx;
	margin: 25rpx 0 5rpx 0;
	text-align: center;
}
.btn{
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
	width:95rpx;
	height:45rpx;
	line-height:45rpx;
	text-align:center;
	background:#FFA500;
	color:#fff;
	font-size:24rpx;
}
.score-box{
	display: flex;
	color: #FFA500;
	height:35rpx;
	line-height:35rpx;
}
.score{
	font-size: 23rpx;
}
.score-item .iconfont{
	font-size: 26rpx;
}
.shop-adress-box{
	display: flex;
	height:100rpx;
	line-height:100rpx;
}
.adress{
	line-height:32rpx;
	font-size:25rpx;
	flex:1;
	padding-top:20rpx;
}
.icon-box{
	width: 100rpx;
	text-align: center;
}
.icon-box .iconfont{
	font-size: 40rpx;
	color: #979797;
}
.share-box .iconfont{
	color: #FFA500;
}
.tel-box{
	position: relative;
	margin-left: 10rpx;
}
.tel-box:after{
	position: absolute;
	content: '';
	display: inline-block;
	height: 65%;
	top: 50%;
	transform: translateY(-50%);
	right: 0;
	width: 2rpx;
	background: #dedede;
}
.icon{
	margin-right:10rpx;
	margin-left:20rpx;
}
.icon .iconfont{
	font-size:40rpx;
	color:#979797;
}
.line{
	width: 100%;
	height: 18rpx;
	background: #dedede;
}
.tab-box{
	display: flex;
	border-bottom: 0.5rpx solid #dedede;
}
.tab-item{
	width: 50%;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	position: relative;
	font-size: 26rpx;
}
.tab-box .choosed{
	color: #FFA500;
}
.tab-box .choosed:after{
	position: absolute;
	content: '';
	display: inline-block;
	width: 50rpx;
	height: 2rpx;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	background: #FFA500;
}
.shop-content{
	font-size: 24rpx;
	color: #333;
	padding: 0 20rpx;
}
.shop-desc{
	padding: 20rpx 0;
	line-height: 42rpx;
	border-bottom: 0.5rpx solid #dedede;
}
.shop-desc .iconfont{
	font-size:25rpx;
	margin-right:5rpx;
	color:#979797;
}
.shop-instruction{
	padding: 20rpx 0;
	line-height: 30rpx;
}
.shop-pic-box{
	padding: 0 20rpx;
}
.shop-pic-item{
	margin-bottom: 10rpx;
}

.footer-box{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	display: flex;
	text-align: center;
	font-size: 28rpx;
	border-top: 0.5rpx solid #dedede;
}
.footer-box .iconfont{
	font-size: 30rpx;
	margin-right: 15rpx;
}
.edit-btn, .coupon-btn{
	width: 50%;
	height: 90rpx;
	line-height: 90rpx;
	color: red;
}
.edit-btn{
	border-right: 0.5rpx solid #dedede;
	color: #388E8E;
}
.edit-btn .icon-edit{
	color: #388E8E;
	vertical-align:2%;
}
.coupon-btn .icon-coupon{
	color: red;
	font-size:36rpx;
	vertical-align:-3%;
}
