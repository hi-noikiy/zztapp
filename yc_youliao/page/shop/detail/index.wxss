page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.container-shop{
	box-sizing:border-box;
	width: 100%;
}
.swiper {
	height: 345rpx;
	width: 100%;
	position: relative;
}
.swiper image {
	height: 100%;
	width: 100%;
}
.swiper-btn{
	position:fixed;
	top: 15rpx;
	right: 0;
	width:116rpx;
	height:50rpx;
	line-height:50rpx;
	background:#000;
	color:#fff;
	font-size:27rpx;
	text-align:center;
	opacity: 0.7;
}
.shop-title-box{
	text-align: center;
	position: relative;
	padding-bottom: 20rpx;
	border: 0.5rpx solid #dedede;
}
.shop-title-box .title{
	font-size: 32rpx;
	margin: 25rpx 0 5rpx 0;
	text-align: center;
}
.btn{
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
	width:95rpx;
	height:45rpx;
	line-height:45rpx;
	text-align:center;
	background:#FFA500;
	color:#fff;
	font-size:24rpx;
}
.score-box{
	display: flex;
	color: #FFA500;
	height:35rpx;
	line-height:35rpx;
}
.score{
	font-size: 23rpx;
}
.score-item .iconfont{
	font-size: 26rpx;
}
.shop-adress-box{
	display: flex;

}
.adress{
	line-height: 25rpx;
	font-size: 26rpx;
	flex: 1;
}
.icon{
	font-size:35rpx;
	margin-right:15rpx;
	margin-left:20rpx;
}
.footer-box{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	display: flex;
	text-align: center;
	font-size: 28rpx;
	border-top: 0.5rpx solid #dedede;
}
.footer-box .iconfont{
	font-size: 30rpx;
	margin-right: 15rpx;
}
.edit-btn, .coupon-btn{
	width: 50%;
	height: 90rpx;
	line-height: 90rpx;
	color: red;
}
.edit-btn{
	border-right: 0.5rpx solid #dedede;
	color: #388E8E;
}
.edit-btn .icon-edit{
	color: #388E8E;
	vertical-align:2%;
}
.coupon-btn .icon-coupon{
	color: red;
	font-size:36rpx;
	vertical-align:-3%;
}