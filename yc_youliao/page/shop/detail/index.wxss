page{
	background-color: #f4f4f4;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	font-family: PingFangSC-Regular;
}
.container-shop{
	box-sizing:border-box;
	width: 100%;
	background: #fff;
}
.swiper-contain{
	width: 100%;
	position: relative;
}
.swiper {
	height: 345rpx;
	width: 100%;
}
.swiper image {
	height: 100%;
	width: 100%;
}
.swiper-btn{
	position:absolute;
	top: 15rpx;
	right: 0;
	width:116rpx;
	height:50rpx;
	line-height:50rpx;
	background:#000;
	color:#fff;
	font-size:27rpx;
	text-align:center;
	opacity: 0.7;
}
.shop-title-box{
	text-align: center;
	position: relative;
	padding-bottom: 20rpx;
	border: 0.5rpx solid #dedede;
}
.shop-title-box .title{
	font-size: 32rpx;
	margin: 25rpx 0 5rpx 0;
	text-align: center;
}
.btn{
	position: absolute;
	right: 0;
	top: 61%;
	transform: translateY(-50%);
	width:95rpx;
	height:45rpx;
	line-height:45rpx;
	text-align:center;
	background:#FFA500;
	color:#fff;
	font-size:24rpx;
}
.collected{
	background:#dedede;
	color: #979797;
}
.score-box{
	display: flex;
	color: #FFA500;
	height:35rpx;
	line-height:35rpx;
}
.score{
	font-size: 24rpx;
}
.score-item .iconfont{
	font-size: 26rpx;
}
.shop-adress-box{
	display: flex;
	height:100rpx;
	line-height:100rpx;
}
.adress{
	line-height:32rpx;
	font-size:26rpx;
	flex:1;
	height: 100%;
	position: relative;
}
.adress .address-detail{
	position: absolute;
	left: 0;
	top: 50%;
	width: 100%;
	transform: translateY(-50%);
	max-height:90rpx;
	overflow:hidden;
}
.icon-box{
	width: 100rpx;
	text-align: center;
}
.icon-box .iconfont{
	font-size: 40rpx;
	color: #979797;
}
.share-box{
	background: #fff;
}
.share-box:after{
	border: none;
}
.share-box .iconfont{
	color: #FFA500;
}
.tel-box{
	position: relative;
}
.tel-box:after{
	position: absolute;
	content: '';
	display: inline-block;
	height: 65%;
	top: 50%;
	transform: translateY(-50%);
	right: 0;
	width: 2rpx;
	background: #dedede;
}
.icon{
	margin-right:10rpx;
	margin-left:20rpx;
}
.icon .iconfont{
	font-size:40rpx;
	color:#979797;
}
.line{
	width: 100%;
	height: 18rpx;
	background: #dedede;
}
.tab-box{
	display: flex;
	border-bottom: 0.5rpx solid #dedede;
}
.tab-item{
	width: 50%;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
	position: relative;
	font-size: 28rpx;
}
.tab-box .choosed{
	color: #FFA500;
}
.tab-box .choosed:after{
	position: absolute;
	content: '';
	display: inline-block;
	width: 100rpx;
	height: 2rpx;
	bottom: 0;
	left: 50%;
	transform: translateX(-50%);
	background: #FFA500;
}
.shop-content{
	font-size: 25rpx;
	color: #333;
	padding: 0 20rpx;
}
.shop-desc{
	padding: 20rpx 0;
	line-height: 42rpx;
	border-bottom: 0.5rpx solid #dedede;
}
.shop-desc .iconfont{
	font-size:25rpx;
	margin-right:5rpx;
	color:#979797;
}
.shop-instruction{
	padding: 20rpx 0;
	line-height: 30rpx;
}
.shop-pic-box{

}
.shop-pic-item{
	margin-bottom: 10rpx;
	width: 100%;
}
.shop-pic-item .pic{
	width: 100%;
}

.footer-box{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	display: flex;
	text-align: center;
	font-size: 28rpx;
	border-top: 0.5rpx solid #dedede;
}
.footer-box .iconfont{
	font-size: 30rpx;
	margin-right: 15rpx;
}
.edit-btn, .coupon-btn{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	color: red;
}
.edit-btn{
	color: #388E8E;
}
.edit-btn .icon-edit{
	color: #388E8E;
	vertical-align:2%;
}
.coupon-btn .icon-coupon{
	color: red;
	font-size:36rpx;
	vertical-align:-3%;
}

.home-list{
	width: 100%;
}
.home-list .home-list-item{
	padding: 15rpx 20rpx; 
	display: flex;
	margin-bottom: 10rpx;
}
.home-list .home-list-item .pic{
	width: 120rpx;
	height: 120rpx;
	background: #dedede;
}
.home-list .home-list-item .desc{
	flex: 1;
	margin-left: 15rpx;
}
.home-list-item .desc .title{
	display: flex;
	justify-content: space-between;
	font-size:26rpx;
}
.home-list-item .desc .title .name{
	font-weight:600;
}
.home-list-item .desc .title .distance{
	color: #FF8C00;
}
.home-list-item .desc .tabs{
	display: flex;
}
.home-list-item .desc .tabs .tab-itam{
	font-size:23rpx;
	padding:0 5rpx;
	border:0.5rpx solid #ff7c77;
	border-radius:10rpx;
	height:34rpx;
	line-height:34rpx;
	padding-bottom:;
	padding:0 5rpx;
	margin-right:20rpx;
	color: #FA8072;
}
.score-box-contain{
	width: 100%;
	position: relative;
	margin:10rpx 0 20rpx;
	height: 50rpx;
}
.score-box{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	text-align: left;
	line-height: 26rpx;
	display: flex;
	height: 26rpx;
}
.score-list{
	height: 26rpx;
	line-height: 26rpx;
	margin-right: 5rpx;
	display: flex;
}
.score-text{
	font-size: 20rpx;
	color: #f9984b;
}
.score-box .iconfont{
	color: #FF8C00;
	font-size: 24rpx;
	vertical-align:24%;
}

.iconfont-my{
	font-size:15pt;
	margin-right:13rpx;
	vertical-align:-6%;
}
.icon-city{
	color:#40E0D0;
}
.icon-store{
	color: #0000CD;
}
.icon-star{
	color: red;
}
.icon-msg-solid{
	color: #4169E1;
}
.icon-publish{
	color: #32CD32;
}
.icon-coupon{
	color: #FF6347;
}

.active {
	color: #fa5305;
}
.pic-avatar{
	width: 100%;
	height: 100%;
}


.item,.itemTitle{
	padding: 20rpx;
	line-height: 66rpx;
	font-size: 32rpx;
	padding-left: 80rpx;
	background-color: #fff;
	border-bottom: 0.5rpx solid #eee;
	position: relative;
	color: #666;
}
.itemTitle{
	padding-left: 30rpx;
	color: #222;
	font-weight: 700
}
.itemTitle:after{
	content: '';
	position: absolute;
	top: 38rpx;
	width: 16rpx;
	height: 16rpx;
	border-right: 2rpx solid #777;
	border-top: 2rpx solid #777;
	transform: rotate(135deg);
	right: 40rpx;
	transition: transform .2s;
}
.itemTitle.hide:after{
	transform: rotate(45deg);
}

.item{
	padding-left: 40rpx;
}
.item:last-child{
	border-bottom: none;
}
.item:after{
	content: '';
	position: absolute;
	right: 40rpx;
	top: 38rpx;
	width: 16rpx;
	height: 16rpx;
	border-right: 2rpx solid #777;
	border-top: 2rpx solid #777;
	transform: rotate(45deg)
}
.type-item-active{
	color: #ff7803;
}
.none{
	margin-top:50%;
	color:#777;
}
.newItem{
    background-color: #fff;
}
.none{
	margin-top:50%;
	color:#777;
	text-align:center;
}
.titleWrapper{
	width: 75%;
}

.goToMoveIn{
	width: 38%;
	margin: 40rpx auto 40rpx;
	text-align: center;
	border-radius: 30rpx;
	height: 60rpx;
	line-height: 60rpx;
	color: #fa5305;
	border: 1rpx solid #fa5305;
	font-size:26rpx;
}
