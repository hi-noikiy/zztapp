/* yc_youliao/page/order/order.wxss */

page {
  background-color: #f4f4f4;
}

.title {
  padding: 60rpx 20rpx 20rpx;
  font-size: 34rpx;
  font-weight: 400;
}

.listWrapper {
  background-color: #fff;
}

.listWrapper .list {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #ddd8ce;
  position: relative;
  padding: 0 20rpx;
  line-height: 90rpx;
  height: 90rpx;
  text-align: left;
  font-size: 30rpx;
}

.list .btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 2rpx solid #fb5100;
  border-radius: 3px;
  vertical-align: middle;
  font-size: 50rpx;
  font-weight: lighter;
  color: #fb5100;
}

.list .btn.del {
  margin-right: 10rpx;
}

.list .btn.disable {
  background-color: #dcdcdc;
  color: #999;
  border: 0;
}

.list .btn.add {
  margin-left: 10rpx;
}

.list .input {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 2rpx solid #fb5100;
  border-radius: 3px;
  vertical-align: middle;
}
.list .icon{
  vertical-align: top;
  padding-top: 25rpx;
}
.submit {
  margin: 40rpx 20rpx;
  height: 94rpx;
  line-height: 94rpx;
  font-size: 40rpx;
  text-align: center;
  color: #fff;
  background: -webkit-linear-gradient(left,#fe502b,#fe033f);
  border-radius: 4px;
  cursor: pointer;
}
