<template name="list">
  <view class="newItem" wx:for="{{data}}" wx:for-item="item" wx:key="unique" >
    <navigator hover-class="none" url="/yc_youliao/page/detail/detail?id={{item.id}}&mid={{item.mid}}&status={{item.status}}">
      <view class="top">
        <view class="avatar">
          <image src="{{item.avatar}}" />
        </view>
        <view class='topRight'>
          <text class='txt1'>{{item.nickname}}</text>
          <view class='txt2'>
            <block wx:if="{{item.freshtime !== '0' && item.freshtime != undefined}}">
              <text>{{item.freshtime}}</text>
            </block>
            <block wx:else>
              <text>{{item.createtime}}</text>
            </block>
            <block wx:if="{{item.isding == 1}}">
            <text class="ding">置顶</text>
            </block>
          </view>
        </view>
        <view class='wechat'>
          <image class='img' src="../../resource/images/phone.png" />联系他</view>
      </view>
      <view class="contentTxt">{{item.con.title}}</view>
    </navigator>
    <block wx:if="{{item.con.thumbs}}">
      <view class="images clearfix" wx:if="{{imagesSocket && imagesSocket != ''}}">
        <block wx:if="{{newImg == true}}">
          <image bindtap="previewImg" wx:for-item="img" wx:for="{{item.con.thumbs}}" data-src="{{img}}" src="{{img}}" />
        </block>
        <block wx:else>
           <image bindtap="previewImg" wx:for-item="img" wx:for="{{item.con.thumbs}}" data-src="{{imagesSocket + img}}" src="{{imagesSocket + img}}" />
        </block>
      </view>
    </block>
    <block wx:if="{{item.city}}">
      <view class='address'>
        <image class="img" src="../../resource/images/location.png" />
          {{item.city + item.district }}
          <block wx:if="{{item.distance}}">
            (距您{{item.distance}}km)
          </block>
      </view>
    </block>
    <view class="info">
      <view class='module'>
        <navigator url="/yc_youliao/page/moduleList/moduleList?id={{item.mid}}">
          #{{item.modulename}}
        </navigator>
      </view>
      <view style="float: right;padding-right: 20rpx">
        <block wx:if="{{item.views}}">
          <image class="img" src="../../resource/images/liulan.png" />
          <text style="padding-right: 16rpx">{{item.views}}人浏览</text>
        </block>
      </view>
    </view>
  </view>
</template>