<template name="datetime">
  <view class="item pickerWrapper">
    <text class='title text'><block wx:if="{{data.isrequired == '1'}}"><text style='color: red'>*</text>
    </block>时间</text>
    <picker mode="time" class='picker' data-name="{{data.enname}}" value="{{shijian.time}}" start="00:00" end="23:59" bindchange="bindTimeChange">
      <view class="text">
        {{shijian.time}}
      </view>
    </picker>
  </view>
