<template name="radio">
  <view class='smallTitle col666'>
    <block wx:if="{{data.isrequired == '1'}}">
      <text style='color: red'>*</text>
    </block>{{data.name}}</view>
  <view class='item selectBox'>
    <view class='select {{form[data.enname] == item ? "checked" : ""}}' wx:for="{{data.mtypeconarr}}" bindtap='radio' data-value="{{item}}" data-name="{{data.enname}}">
      <text class='title'>{{item}}</text>
    </view>
  </view>
</template>

<template name="text">
  <view class='item'>
    <text class='title text'><block wx:if="{{data.isrequired == '1'}}"><text style='color: red'>*</text>
    </block>{{data.name}}</text>
    <input type="text" placeholder="请填写{{data.name}}" bindinput='input' value="{{form[data.enname]}}" data-name="{{data.enname}}" />
  </view>
</template>
<template name="longtext">
  <view class='smallTitle col666'>{{data.name}}</view>
  <view class='item'>
    <textarea class='area' bindblur="bindTextAreaBlur" data-name="{{data.enname}}" placeholder="请填写{{data.name}}" />
  </view>
</template>

<template name="checkbox">
  <view class='smallTitle col666'>
    <block wx:if="{{data.isrequired == '1'}}">
      <text style='color: red'>*</text>
    </block>{{data.name}}</view>
  <view class='item selectBox'>
    <view class='checkboxWrapper select {{item.checked == true ? "checked" : ""}}' wx:for="{{data.mtypeconarr}}" bindtap='checkboxTap' data-item-index="{{itemIist}}" data-index="{{index}}" data-value="{{item.value}}" data-name="{{data.enname}}">
      <text class='title'>{{item.name}}</text>
    </view>
  </view>
</template>

<template name="images">
  <view class='item'>
    <view>
      <block wx:if="{{data.isrequired == '1'}}">
        <text style='color: red'>*</text>
      </block>{{data.name}}</view>
    <view class='imagewrapper'>
      <view class='imageUploader' data-name="{{data.enname}}" bindtap="imgUpload" data-type="add"></view>
      <block wx:if="{{imgs !== undefined}}">
        <image wx:for="{{imgs}}" data-name="{{data.enname}}" bindtap="imgUpload" data-img="{{item}}" data-type="prev" wx:key="{{item}}" class='img' src='{{item}}'></image>
      </block>
      <view class='imageUploader del' data-name="{{data.enname}}" bindtap="imgUpload" data-type="del" wx:if="{{imgs.length > 0}}"></view>
    </view>
  </view>
</template>

